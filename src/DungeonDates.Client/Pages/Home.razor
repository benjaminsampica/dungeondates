@layout MainLayout

@page "/"

<PageTitle>Home - Dungeon Dates</PageTitle>

<MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
    <MudImage Src="/icon.png" Height="200"/>
    <MudText Typo="Typo.h1" Align="Align.Center" GutterBottom="false" Color="Color.Primary">Dungeon Dates</MudText>
    <MudText Typo="Typo.h3" Align="Align.Center" Color="Color.Primary">The quest to schedule a session ends here.</MudText>
    <MudText Typo="Typo.h6" Align="Align.Center">Schedule your next session in seconds - just share a link, and your party picks the dates that work</MudText>
    <MudButton Href="/add" Variant="Variant.Filled" Color="Color.Primary" Style="width: 100%; height: 100px; max-width: 500px;">
        <MudText Typo="Typo.h3" GutterBottom="false" Color="Color.Secondary">
            Schedule Now
        </MudText>
    </MudButton>
</MudStack>
<img src="/divider.png" alt="Fancy divider" class="fantasy-divider py-8" />
<MudContainer MaxWidth="MaxWidth.Large">
    <MudText Typo="Typo.h2" Align="Align.Center" Color="Color.Primary" Class="pb-4">
        What Adventurers Are Saying
    </MudText>

    <MudGrid Justify="Justify.Center">
        @foreach (var testimonial in Testimonal.Testimonals)
        {
            <MudItem xs="12" sm="6" md="4">
                <MudPaper Elevation="2" Class="pa-4" Style="min-height: 200px; height: 100%;">
                    <MudStack Justify="Justify.SpaceBetween" Style="height: 100%;">
                        <MudText Typo="Typo.h6">
                            "@testimonial.Quote"
                        </MudText>
                        <MudText Typo="Typo.subtitle1" Align="Align.Right" Color="Color.Primary">
                            — @testimonial.Author
                        </MudText>
                    </MudStack>
                </MudPaper>
            </MudItem>
        }
    </MudGrid>
</MudContainer>
<img src="/divider.png" alt="Fancy divider" class="fantasy-divider pt-8" />
