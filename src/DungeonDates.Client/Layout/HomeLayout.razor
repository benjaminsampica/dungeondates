@inherits LayoutComponentBase
<MudThemeProvider/>
<MudLayout>
    <MudMainContent Style="padding-bottom: 60px;">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
    <MudAppBar Elevation="1" Style="top: auto; bottom: 0" Dense="true" Fixed="true" Color="Color.Dark">
        <MudText Align="Align.Center" Style="width: 100%">
            Created by Ben Sampica and open source on <MudLink Href="https://github.com/benjaminsampica/dungeondates" Target="_blank" Color="Color.Tertiary">GitHub</MudLink>.
        </MudText>
    </MudAppBar>
</MudLayout>