@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Fixed="false" Style="background-color: transparent;" Elevation="0">
        <a href="/" class="d-flex align-center">
            <MudImage Src="/icon.png" Height="50"/>
            <MudText Typo="Typo.h4" Color="Color.Primary">Dungeon Dates</MudText>
        </a>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Material.Filled.Coffee" Href="https://buymeacoffee.com/bsampica" Target="_blank"/>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Href="https://github.com/benjaminsampica/dungeondates" Target="_blank"/>
    </MudAppBar>
    <MudMainContent Class="pt-2">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pb-2">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {

    private readonly MudTheme _theme = new()
    {
        PaletteLight = new()
        {
            Primary = "#5C4434",      // Dark brown ink
            Secondary = "#E2D4B7",    // Aged parchment
            Background = "#f8d28e",   
            Surface = "#EFE8D8",      // Light background for cards
            Success = "#6B8E23",       // Olive green (earthy success)
            Warning = "#D4A017",       // Burnished gold (aged caution)
            Error = "#8B0000",         // Dark crimson (dried blood danger)
            Info = "#3B6A9D",
            AppbarBackground = "#5C4434",
            DrawerBackground = "#8D775F",  // Worn leather feel
            TextPrimary = "#2F2F2F",  // Deep charcoal ink
            TextSecondary = "#5C4434",
            ActionDefault = "#A68A64", // Muted brass
            ActionDisabled = "#CCC1B7",
            Divider = "#5C4434",
            LinesDefault = "#5C4434",
            TableLines = "#5C4434",
            LinesInputs = "#5C4434"
        },
        Typography = new()
        {
            Default = new DefaultTypography
            {
                FontFamily = ["Cormorant Garamond", "serif"],
                FontSize = "1rem"
            },
            H1 = new H1Typography { FontFamily = ["IM Fell English", "serif"] },
            H2 = new H2Typography { FontFamily = ["IM Fell English", "serif"] },
            H3 = new H3Typography { FontFamily = ["IM Fell English", "serif"] },
            H4 = new H4Typography { FontFamily = ["IM Fell English", "serif"] },
            H5 = new H5Typography { FontFamily = ["IM Fell English", "serif"] },
            H6 = new H6Typography { FontFamily = ["IM Fell English", "serif"] }
        }
    };

}
